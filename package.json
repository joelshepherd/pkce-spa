{
  "name": "pkce-spa",
  "version": "0.1.0",
  "description": "An OpenID Connect authentication manager for modern SPAs using PKCE.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "<3.8": {
      "*": [
        "dist/ts3.5/*"
      ]
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/ts3.5/*.d.ts"
  ],
  "scripts": {
    "build": "tsc && downlevel-dts dist/*.d.ts dist/ts3.5",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "npx playwright test",
    "test:serve-client": "npx serve",
    "test:serve-provider": "node test/mock-provider/server.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.12.3",
    "@types/oidc-provider": "^7.4.0",
    "downlevel-dts": "^0.7.0",
    "oidc-provider": "^7.5.1",
    "playwright": "^1.12.3",
    "prettier": "2.3.2",
    "serve": "^12.0.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelshepherd/pkce-spa.git"
  },
  "author": {
    "name": "Joel Shepherd",
    "url": "https://github.com/joelshepherd"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joelshepherd/pkce-spa/issues"
  },
  "homepage": "https://github.com/joelshepherd/pkce-spa#readme"
}
